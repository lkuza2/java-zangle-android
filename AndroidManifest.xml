<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lukekuza.zangleapp"
          android:versionCode="3"
          android:versionName="@string/app_version">

    <uses-sdk
            android:minSdkVersion="10"
            android:targetSdkVersion="14"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:label="@string/app_name"
            android:icon="@drawable/zangle_logo">
        <activity
                android:name="com.lukekuza.zangleapp.MainActivity"
                android:label="@string/app_name"
                android:icon="@drawable/zangle_logo"
                android:theme="@style/Theme.Sherlock.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.lukekuza.zangleapp.user.UserActivity"
                android:label="@string/user_info"
                android:theme="@style/Theme.Sherlock.Light"/>
        <activity
                android:name="com.lukekuza.zangleapp.about.AboutActivity"
                android:label="@string/about"
                android:theme="@style/Theme.Sherlock.Light"/>
    </application>
</manifest> 
